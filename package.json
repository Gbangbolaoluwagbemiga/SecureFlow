{
  "name": "secureflow",
  "version": "1.0.0",
  "description": "Milestone-based escrow platform with MetaMask Smart Accounts delegation",
  "main": "index.js",
  "scripts": {
    "build": "cd frontend && npm install --legacy-peer-deps && npm run build",
    "dev": "cd frontend && npm run dev",
    "start": "cd frontend && npm start",
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:verbose": "hardhat test --verbose",
    "test:gas": "REPORT_GAS=true hardhat test",
    "deploy": "hardhat run scripts/deploy.js --network monad",
    "deploy:token": "hardhat run scripts/deploy-token.js --network monad",
    "deploy:local": "hardhat run scripts/deploy.js --network localhost",
    "format": "prettier --write \"contracts/**/*.sol\"",
    "format:check": "prettier --check \"contracts/**/*.sol\"",
    "lint": "solhint \"contracts/**/*.sol\"",
    "lint:fix": "solhint \"contracts/**/*.sol\" --fix",
    "coverage": "hardhat coverage",
    "clean": "hardhat clean",
    "node": "hardhat node",
    "verify": "hardhat verify"
  },
  "keywords": [
    "blockchain",
    "escrow",
    "milestone",
    "defi",
    "hackathon"
  ],
  "author": "Oluwagbemiga",
  "license": "MIT",
  "type": "commonjs",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.1.0",
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@nomicfoundation/hardhat-ignition-ethers": "^2.0.0",
    "@nomiclabs/hardhat-etherscan": "^3.1.8",
    "hardhat": "^2.22.1",
    "prettier": "^3.0.0",
    "prettier-plugin-solidity": "^1.1.0",
    "solhint": "^4.5.4"
  },
  "dependencies": {
    "dotenv": "^16.4.5"
  }
}
